<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.AddFaculty"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/upload_image"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:id="@+id/updateTeacherImage"
            app:civ_border_width="10px"
            app:civ_border_color="@color/purple_200"
            android:padding="0dp"
            app:civ_border_overlay="true"

            ></de.hdodenhof.circleimageview.CircleImageView>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/updateTeacherName"
                android:hint="Name"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/updateTeacherEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/updateTeacherPost"
                android:hint="Post"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <Spinner-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:id="@+id/spinnerTeacherCategory"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:spinnerMode="dropdown"-->
<!--            android:background="@android:drawable/btn_dropdown"-->
<!--            android:gravity="center"-->

<!--            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">-->

<!--        </Spinner>-->

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateFacultyBtn"
            android:text="Update Faculty"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            ></com.google.android.material.button.MaterialButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="OR"
            android:textColor="@color/deepPurple"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8sp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteFacultyBtn"
            android:text="Delete Faculty"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            ></com.google.android.material.button.MaterialButton>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>